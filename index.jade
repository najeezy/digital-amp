doctype html
html
  head
    meta(charset="UTF-8")
    title digitalAMP
    link(rel="stylesheet", href="css/vendor/bootstrap.min.css")
    link(rel="stylesheet", href="//maxcdn.bootstrapcdn.com/font-awesome/4.3.0/css/font-awesome.min.css")
    link(rel="stylesheet", href="css/site.css")
  body
    nav.navbar.navbar-default.navbar-fixed-top.not-scrolled
      .navbar-header
        a.navbar-brand(href="#top") digital
          span AMP
      ul.nav.navbar-nav.navbar-right
        li: a(href="#about") About
        li: a(href="#contact") Contact

    section#intro-container.clearfix(data-current-index=0)
      div.image-container
        div.image(style="background-image: url(images/sample1.jpg)")
          div.color-overlay
      div.image-container
        div.image(style="background-image: url(images/sample2.jpg)")
          div.color-overlay
      div.image-container
        div.image(style="background-image: url(images/sample3.jpg)")
          div.color-overlay
      div.image-container
        div.image(style="background-image: url(images/sample4.jpg)")
          div.color-overlay

    section.main-info-container
      h2 We are digital
        span AMP
      p A turn-key digital solution for your business's web and mobile advertising and marketing needs.

    section.icons.row
      h2.text-center#icon-header What We Do
      figure.col-md-4.text-center.one
        img#adversiting-image(src="images/advertising.svg")
        h2 Advertising
      figure.col-md-4.text-center.two
        img#marketing-image(src="images/marketing.svg")
        h2 Marketing
      figure.col-md-4.text-center.three
        img#promotion-image(src="images/promotions.svg")
        h2 Promotions
    
    section.strategy.row
      div.content.col-md-6
        h2 Our Strategy
        ul
          li 
            i.fa.fa-angle-right
            text Quality
          li 
            i.fa.fa-angle-right
            text Research
          li 
            i.fa.fa-angle-right
            text Language
          li 
            i.fa.fa-angle-right
            text Engagement
      div.strategy-image.col-md-6
        
    

    
  script(src="js/vendor/jquery-1.11.2.min.js")
  script(src="js/vendor/bootstrap.min.js")
  script(src="js/site.js")
